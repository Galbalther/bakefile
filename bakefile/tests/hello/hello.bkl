<?xml version="1.0" ?>
<makefile>
    
    <requires version="0.1.1"/>

    <set var="BUILDDIR">
        <if cond="TOOLSET=='win32'">build-$(COMPILER)</if>
        <if cond="TOOLSET!='win32'">.</if>
    </set>
    
    <if cond="FORMAT!='msevc4prj'">
        <exe id="hello">
            <sources>hello.c</sources>
        </exe>
        <exe id="hello_cxx">
            <sources>hello.cpp</sources>
        </exe>
    </if>

    <exe id="hello_gui">
        <app-type>gui</app-type>
        <sources>hello.cpp</sources>
    </exe>
</makefile>
