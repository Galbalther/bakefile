module submodules/main.bkl {
  submodules {
    submodules/child/child.bkl
  }
  variables {
    toolsets = [gnu, vs2010]
  }
  targets {
    exe main {
      sources {
        file @top_srcdir/main.cpp
      }
    }
  }
}

module submodules/child/child.bkl {
  variables {
  }
  targets {
    exe child {
      sources {
        file @top_srcdir/child/child.cpp
      }
    }
  }
}

